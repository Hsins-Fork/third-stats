{
	"manifest_version": 2,
	"name": "ThirdStats",
	"description": "Simple but beautiful Statistics for your Thunderbird Email Accounts",
	"version": "0.3.1",
	"author": "Andreas MÃ¼ller",
	"applications": {
			"gecko": {
					"id": "thirdstats@devmount.de",
					"strict_min_version": "78.0"
			}
	},
	"browser_action": {
			"default_popup": "popup.html",
			"default_title": "ThirdStats",
			"default_icon": "icon.svg"
	},
	"permissions": [
		"accountsRead",
		"messagesRead",
		"tabs"
	],
	"icons": {
			"64": "icon.svg",
			"32": "icon.svg",
			"16": "icon.svg"
	}
}
